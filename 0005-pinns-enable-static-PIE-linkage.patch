From 88567ab1c989b5ac614b1d59be396263f0058bea Mon Sep 17 00:00:00 2001
From: Mark D Horn <mark.d.horn@intel.com>
Date: Thu, 3 Dec 2020 18:26:27 -0800
Subject: [PATCH] pinns: enable static PIE linkage

Signed-off-by: Patrick McCarty <patrick.mccarty@intel.com>
Signed-off-by: Mark D Horn <mark.d.horn@intel.com>
---
 pinns/Makefile | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/pinns/Makefile b/pinns/Makefile
index 762a0791826a..f8eb1dd7329b 100644
--- a/pinns/Makefile
+++ b/pinns/Makefile
@@ -4,12 +4,12 @@ obj = $(src:.c=.o)
 STRIP ?= strip
 override LIBS +=
 CFLAGS ?= -std=c99 -Os -Wall -Werror -Wextra
-override CFLAGS += -static
+override CFLAGS += -static-pie
 
 all: ../bin/pinns
 
 ../bin/pinns: $(obj) | ../bin
-	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)
+	$(CC) -fPIE -o $@ $^ $(CFLAGS) $(LIBS)
 	$(STRIP) -s $@
 
 %.o: %.c $(HEADERS)
